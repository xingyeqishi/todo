<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".LoginActivity" android:padding="10dp">

    <TableRow android:layout_marginBottom="10dp"  android:layout_marginTop="10dp">
        <TextView android:layout_height="wrap_content" android:text="用户名:" android:textStyle="bold"/>
        <EditText android:layout_marginLeft="10dp"
            android:background="@drawable/box" android:gravity="center_vertical" android:id="@+id/account" android:layout_height="44dp" android:layout_weight="1" android:hint="请输入用户名"/>
    </TableRow>

    <TableRow android:layout_marginBottom="10dp">
        <TextView android:layout_height="wrap_content" android:text="密码:" android:textStyle="bold"/>
        <EditText android:layout_marginLeft="10dp"
            android:background="@drawable/box" android:gravity="center_vertical" android:id="@+id/pwd" android:inputType="number" android:layout_height="44dp" android:layout_weight="1" android:hint="请输入密码:"/>
    </TableRow>
    <TableRow android:layout_marginBottom="10dp">
        <TextView android:layout_height="wrap_content" android:text="密码确认:" android:textStyle="bold"/>
        <EditText android:layout_marginLeft="10dp"
            android:background="@drawable/box" android:gravity="center_vertical" android:id="@+id/pwd2"  android:inputType="number" android:layout_height="44dp" android:layout_weight="1" android:hint="请输入密码:"/>
    </TableRow>

    <TableRow android:layout_marginBottom="10dp">
        <Button android:id="@+id/registerBtn" android:background="@drawable/selector_button" android:textColor="#fff" android:layout_height="wrap_content" android:layout_weight="1" android:layout_span="2" android:text="注册"/>
    </TableRow>
</TableLayout>
